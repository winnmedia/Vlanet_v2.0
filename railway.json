{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Using nixpacks.toml for build'"
  },
  "deploy": {
    "startCommand": "gunicorn railway_wsgi:application --bind 0.0.0.0:$PORT --workers 2 --timeout 120 --preload --log-level info",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health/",
    "healthcheckTimeout": 30
  }
}