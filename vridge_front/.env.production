# Production Environment Variables
# API Configuration
NEXT_PUBLIC_API_URL=https://videoplanet.up.railway.app
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_API_RETRY_ATTEMPTS=3
NEXT_PUBLIC_API_RETRY_DELAY=1000

# Environment
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# App Configuration
NEXT_PUBLIC_APP_NAME=VideoPlanet
NEXT_PUBLIC_APP_URL=https://vlanet.net

# Authentication
NEXTAUTH_URL=https://vlanet.net
NEXTAUTH_SECRET=production-secret-key-change-this-in-vercel

# Feature Flags
NEXT_PUBLIC_ENABLE_MOCK_API=false
NEXT_PUBLIC_ENABLE_DEVTOOLS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Railway Backend URL
NEXT_PUBLIC_BACKEND_URL=https://videoplanet.up.railway.app