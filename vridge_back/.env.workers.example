# VideoPlanet Worker System Environment Variables

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings_railway
SECRET_KEY=your-secret-key-here
DEBUG=False
SITE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/videoplanet

# Redis (BullMQ Queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Railway Redis (Production)
# RAILWAY_REDIS_URL=redis://default:password@redis.railway.internal:6379

# Worker Configuration
PREVIEW_WORKER_CONCURRENCY=2
FINAL_WORKER_CONCURRENCY=1

# Django API (for workers)
DJANGO_API_BASE_URL=http://localhost:8000
# DJANGO_API_TOKEN=your-api-token

# Storage (MinIO or S3)
STORAGE_BACKEND=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=videoplanet

# AWS S3 (Production)
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_REGION_NAME=ap-northeast-2
# AWS_STORAGE_BUCKET_NAME=videoplanet-media

# AI Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Email
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# FFmpeg Settings
FFMPEG_PATH=/usr/local/bin/ffmpeg
FFPROBE_PATH=/usr/local/bin/ffprobe

# Temporary Files
TEMP_DIR=/tmp/videoplanet
MAX_UPLOAD_SIZE=5368709120  # 5GB in bytes

# Webhook Settings
WEBHOOK_TIMEOUT=10000  # milliseconds
WEBHOOK_MAX_RETRIES=3